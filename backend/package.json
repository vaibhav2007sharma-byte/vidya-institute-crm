const express = require("express");
const cors = require("cors");

const app = express();
app.use(cors());
app.use(express.json());

app.get("/", (req, res) => {
  res.send("Vidya Institute CRM Backend Running");
});

app.get("/students", (req, res) => {
  res.json([
    { id: 1, name: "Test Student", course: "CCC", fee: 5000 }
  ]);
});

app.get("/fees", (req, res) => {
  res.json([
    { id: 1, student: "Test Student", amount: 2000 }
  ]);
});

app.listen(5000, () => {
  console.log("Server running on port 5000");
});
